{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.13",
        "maxLambdaSize": "50mb",
        "includeFiles": ["backend/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "main.py" }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}
